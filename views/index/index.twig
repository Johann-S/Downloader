{% extends "base/base.twig" %}
{% block content %}
<div id="jumbotron" class="jumbotron">
    <h1 id="titleApp" class="display-3">Downloader</h1>
    <hr class="my-2">
    <form id="formDownload" class="center-block">
        <div id="formGrpUrl" class="form-group row">
            <label for="inputUrl" class="col-sm-2 col-form-label">URL : </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUrl" placeholder="">
            </div>
        </div>
        <div id="resultUrlGrp" class="form-group row">
          <label class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
            <div id="divResultUrl" class="alert center-block hide" role="alert">
                <p>
                  <a id="downloadLink" href="#" class="hide">
                    <svg class="icon"><use xlink:href="svg/sprite.min.svg#data-transfer-download"></use></svg>
                    <span id="titleDownload"></span>
                  </a>
                  <span id="errorMsg" class="hide"></span>
                </p>
            </div>
          </div>
        </div>
        <div class="form-group row">
            <div class="alert alert-info center-block">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <div id="infoIcon">
                    <svg class="icon"><use xlink:href="svg/sprite.min.svg#info"></use></svg>
                    <span>
                        <strong>Information</strong>
                    </span>
                </div>
                <div>
                    <ul>
                        <li>
                            <strong>File size limit</strong> : {{ downloadInformation.fileSizeLimit }}
                        </li>
                        <li>
                            <strong>Allowed file extension</strong> : {{ downloadInformation.allowedExt }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <button id="btnDownload" type="button" class="btn btn-outline-primary center-block">Download</button>
            <img src="svg/loader.svg" class="loader center-block hide" />
        </div>
    </form>
</div>
{% endblock %}
{% block css %}
<link rel="stylesheet" href="css/index.css"/>
{% endblock %}
{% block javascript %}
<script src="js/index.js"></script>
{% endblock %}
